# ==================== Core Django Configuration ====================
DEBUG=1
ENVIRONMENT=local
SECRET_KEY=django-insecure-change-me-in-production
ALLOWED_HOSTS=127.0.0.1,localhost

# ==================== Database Configuration ====================
POSTGRES_DB=projectue
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ==================== Superuser Configuration ====================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin

# ==================== AI/LLM Configuration ====================
# Together AI API (Primary) - Get $25 free credits at: https://api.together.xyz
# Cost: ~$0.0002 per generation, Speed: 2-3 seconds
TOGETHER_API_KEY=your_together_ai_key_here

# Together AI Model Selection
# Available models: meta-llama/Meta-Llama-3.1-8B-Instruct-Turbo (default, fast)
#                   meta-llama/Meta-Llama-3.1-70B-Instruct-Turbo (slower, better quality)
#                   mistralai/Mixtral-8x7B-Instruct-v0.1 (balanced)
#                   Qwen/Qwen2.5-72B-Instruct (high quality)
TOGETHER_MODEL=meta-llama/Meta-Llama-3.1-8B-Instruct-Turbo

# ==================== External Integrations ====================
# Spotify API (Optional) - Get credentials at: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# ==================== Async Processing ====================
# Celery/Redis for background tasks
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ==================== Security (Production) ====================
# Uncomment and set for production deployment
# CSRF_COOKIE_SECURE=True
# SESSION_COOKIE_SECURE=True